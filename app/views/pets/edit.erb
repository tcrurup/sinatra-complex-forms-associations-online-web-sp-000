<h1>Update Pet</h1>

<form action="/pets" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch"> 
  <label>Name:</label>

  <br>

  <input type="text" name="pet_name" value="<%=@pet.name%>">

  <br>
  
  <%@owners.each do |owner|%>
    <input type="checkbox" name="owner_id" value="<%=owner.id%>" id="<%=owner.id%>"><%=owner.name%></input>
  <%end%>
  
  <br>
  <label>and/or, create a new owner:</label>
  <br>
  <label>name:</label>
    <input  type="text" name="owner_name"></input>
  <br>
  
  <br>

  <input type="submit" value="Create Pet">
</form>


